<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MVP.View.MyActivity.unbindactivity.IDCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/id_card_sim_backk"
                android:layout_width="@dimen/sp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@mipmap/backk" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绑定身份证"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_50">

            <ImageView
                android:id="@+id/img_id_card_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/id_card_front" />

            <LinearLayout
                android:id="@+id/linear_id_card_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/id_card_sim_positive"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_64"
                    android:background="@mipmap/my_icon_camera_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="点击拍摄/上传人像面"
                    android:textColor="#3087ea"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_50">

            <ImageView
                android:id="@+id/img_id_card_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:background="@mipmap/id_card_back" />

            <LinearLayout
                android:id="@+id/linear_id_card_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/id_card_sim_wrong_side"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_64"
                    android:background="@mipmap/my_icon_camera_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="点击拍摄/上传人像面"
                    android:textColor="#3087ea"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/id_card_btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/btlogin"
        android:text="下一步"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/id_card_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/btlogin"
        android:text="完成"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/id_card_sim_one"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/errorred"
        android:padding="@dimen/dp_5"
        android:visibility="gone" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/id_card_sim_two"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_280"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/errorred"
        android:padding="@dimen/dp_5"
        android:visibility="gone" />
</RelativeLayout>