<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_360"
    android:layout_height="match_parent"
    tools:context=".MVP.View.WardmateItem.ScreeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:orientation="horizontal"
            android:paddingTop="@dimen/sp_12"
            android:background="#fff">
            <ImageView
                android:id="@+id/scree_img_back"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@mipmap/backk"
                android:layout_marginLeft="@dimen/dp_20"/>
            <EditText
                android:id="@+id/et_find"
                android:layout_width="@dimen/dp_248"
                android:layout_height="@dimen/dp_32"
                android:background="@drawable/et_find"
                android:layout_marginLeft="@dimen/sp_10"
                android:paddingLeft="@dimen/dp_20"
                android:textColor="@color/colorSan"
                android:textSize="@dimen/sp_14"
                android:hint="请输入病症名称或标题关键字"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/scree_tv_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:textColor="#3087ea"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/scree_linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="vertical"
            android:background="@color/colorWhite">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#3087ea"
                android:text="搜索历史"
                android:layout_margin="@dimen/dp_20"/>

            <TextView
                android:id="@+id/scree_tv_history_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白血病"
                android:layout_marginLeft="@dimen/dp_20"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/scree_linear2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_searchSickCircle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/scree_img_none_find"
            android:layout_width="@dimen/dp_129"
            android:layout_height="@dimen/dp_129"/>
    </LinearLayout>

</RelativeLayout>