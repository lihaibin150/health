<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_360"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MVP.View.Interrogation.QuestioningActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ques_backk"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_22"
            app:placeholderImage="@mipmap/backk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="问诊列表"
            android:textColor="@color/colorHei"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ques_bell"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/common_nav_message_black_n" />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/ques_view"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_6"
        android:background="@color/colorF2" />

    <RelativeLayout
        android:visibility="gone"
        android:layout_below="@+id/ques_view"
        android:layout_marginTop="@dimen/dp_110"
        android:id="@+id/ques_recycler_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_204"
            android:id="@+id/ques_none"
            android:src="@mipmap/none_bg"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorHui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ques_none"
            android:text="嘤~空空入也"
            />
    </RelativeLayout>
</RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ques_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>