<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_360"
    android:layout_height="match_parent"
    tools:context=".MVP.View.LoginActivity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_235"
            android:background="@color/colorBlue"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_80"
                android:src="@mipmap/loginwhite" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/login_eye"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/login_icon_mail_n" />

            <EditText
                android:id="@+id/login_et_email"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/login_eye"
                android:background="@null"
                android:hint="请输入邮箱账号"
                android:singleLine="true"
                android:textColor="#999999"
                android:textColorHint="#999999" />
        </RelativeLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/login_eye_b"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/login_et_pwd"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/login_eye_b"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="number"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="#999999"
                android:textColorHint="#999999" />

            <ToggleButton
                android:id="@+id/togg_log_eye"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:background="@mipmap/login_yc"
                android:button="@null"
                android:checked="true"
                android:disabledAlpha="@android:integer/config_longAnimTime"
                android:minWidth="@null"
                android:minHeight="@null"
                android:padding="@dimen/dp_20"
                android:text="@null"
                android:textOff="@null"
                android:textOn="@null" />
        </RelativeLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_14">


            <TextView
                android:id="@+id/login_usepwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="忘记密码"
                android:textColor="@color/colorHui"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/login_applyJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:text="申请入驻"
                android:textColor="@color/colorBlue"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_bt_but"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btlogin"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>