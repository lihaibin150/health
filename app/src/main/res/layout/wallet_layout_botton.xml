<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <TextView
            android:id="@+id/wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好的"
            android:textColor="@color/colorSan"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wallet_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wallet_name"
            android:layout_marginTop="@dimen/dp_4"
            android:text="2019/9/6"
            android:textColor="@color/colorJiu"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/wallet_red_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="20"
            android:textColor="@color/colorJE"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/wallet_blue_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2016"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>