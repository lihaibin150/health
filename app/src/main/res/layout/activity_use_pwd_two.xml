<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_360"
    android:layout_height="match_parent"
    android:background="@mipmap/forget_bg"
    tools:context=".MVP.View.LoginActivity.UsePwdTwoActivity">

    <ImageView
        android:id="@+id/img_back_forget_finish"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/back_bai" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="忘记密码"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/linearforget"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:background="@drawable/linearforget"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/linearforget"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_forget_pwd_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:hint="请设置新密码"
                android:textColor="@color/colorHei"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/togg_log_eye"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:background="@mipmap/login_yc"
                android:button="@null"
                android:checked="true"
                android:disabledAlpha="@android:integer/config_longAnimTime"
                android:minWidth="@null"
                android:minHeight="@null"
                android:padding="@dimen/dp_20"
                android:text="@null"
                android:textOff="@null"
                android:textOn="@null" />
        </RelativeLayout>

        <View
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/colorHui" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_forget_pwd_two_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:hint="请再次确认密码"
                android:textColor="#000"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/togg_log_eye_two"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:background="@mipmap/login_yc"
                android:button="@null"
                android:checked="true"
                android:disabledAlpha="@android:integer/config_longAnimTime"
                android:minWidth="@null"
                android:minHeight="@null"
                android:padding="@dimen/dp_20"
                android:text="@null"
                android:textOff="@null"
                android:textOn="@null" />
        </RelativeLayout>

        <View
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/colorHui" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_finish_forget"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btforget"
        android:text="完成"
        android:textColor="@color/colorBlue" />

</RelativeLayout>