<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_360"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MVP.View.Interrogation.DetailedInquiryActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/detailed_sim_backk"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_22"
            android:padding="@dimen/dp_5"
            app:backgroundImage="@mipmap/back_bai" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/detailed_sim_ead_portrait"
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_200"
            android:background="@mipmap/user_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/dp_20">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/detailed_sim_head_portrait"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:background="@mipmap/aga"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/detailed_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/detailed_sim_head_portrait"
            android:layout_marginLeft="@dimen/sp_10"
            android:layout_toRightOf="@+id/detailed_sim_head_portrait"
            android:text="名字"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/sick_Disease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailed_text_name"
            android:layout_marginTop="@dimen/dp_20"
            android:text="[主要病症]"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/detailed_text_disease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sick_Disease"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="@color/colorSan"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/sick_Departments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailed_text_disease"
            android:layout_marginTop="@dimen/dp_20"
            android:text="[现病史]"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/detailed_text_departments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sick_Departments"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="@color/colorSan"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/sick_Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailed_text_departments"
            android:layout_marginTop="21dp"
            android:text="[既往病史]"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/detailed_text_details"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/sick_Details"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="@color/colorSan"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/sick_Treatment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailed_text_details"
            android:layout_marginTop="@dimen/dp_20"
            android:text="[最近一次治疗经历]"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/detailed_text_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/sick_Treatment"
            android:layout_marginTop="@dimen/dp_10"
            android:text="456465"
            android:textColor="@color/colorSan"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/detailed_text_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/detailed_text_type"
            android:layout_marginTop="@dimen/dp_10"
            android:text="456465"
            android:textColor="@color/colorJiu"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/detailed_text_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/sick_Treatment"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:text="12225"
            android:textColor="@color/colorSan"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/sick_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailed_text_view"
            android:layout_marginTop="@dimen/dp_20"
            android:text="[相关图片]"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/detailed_image_img"
            android:layout_width="320dp"
            android:layout_height="133dp"
            android:layout_below="@id/sick_img"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

</LinearLayout>