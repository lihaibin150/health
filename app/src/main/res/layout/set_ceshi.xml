<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:id="@+id/set_but_pic"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/pop_ceshi"
        android:gravity="center"
        android:text="拍一张"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/set_but_image"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/set_but_pic"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@drawable/pop_ceshi"
        android:gravity="center"
        android:text="从形象库中选择"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/set_but_album"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/set_but_image"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@drawable/pop_ceshi"
        android:gravity="center"
        android:text="打开相册"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/set_but_dismiss"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/set_but_album"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/pop_ceshi"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
