<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_360"
    android:layout_height="match_parent"
    android:background="@mipmap/forget_bg"
    tools:context=".MVP.View.LoginActivity.UsePwdActivity">

    <ImageView
        android:id="@+id/img_back_forget"
        android:layout_width="16dp"
        android:layout_height="@dimen/sp_16"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
       android:src="@mipmap/back_bai"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="忘记密码"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/linearforget_qian"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:background="@drawable/linearforget"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/linearforget"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_forget_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:hint="请输入邮箱账号"
                android:textColor="#000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_code_forget"
                android:layout_width="58dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btlogin"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/colorWhite"
                android:textSize="10sp" />
        </RelativeLayout>

        <View
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/colorHui" />

        <EditText
            android:id="@+id/et_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColor="#000"
            android:textSize="14sp" />

        <View
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/colorHui" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_next_forget"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btforget"
        android:text="下一步"
        android:textColor="@color/colorBlue" />
</RelativeLayout>